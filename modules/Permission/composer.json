{
    "name": "reasnov/laravel-module-permission",
    "type": "laravel-module",
    "description": "Role and Permission management module for Laravel 12 using Spatie.",
    "authors": [
        {
            "name": "Reas Vyn",
            "email": "reasnov.official@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "composer/installers": "^2.0",
        "laravel/framework": "^12.0",
        "nwidart/laravel-modules": "^12.0",
        "livewire/livewire": "^3.5",
        "livewire/volt": "^1.6",
        "spatie/laravel-permission": "^6.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "extra": {
        "laravel": {
            "providers": [],
            "aliases": {

            }
        }
    },
    "autoload": {
        "psr-4": {
            "Modules\\Permission\\": "src/",
            "Modules\\Permission\\Database\\Factories\\": "database/factories/",
            "Modules\\Permission\\Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Modules\\Permission\\Tests\\": "tests/"
        }
    }
}