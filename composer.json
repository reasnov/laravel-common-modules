{
    "name": "reasnov/laravel-common-modules",
    "description": "Professional monorepo for common Laravel 12 modules.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Reas Vyn",
            "email": "reasnov.official@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "wikimedia/composer-merge-plugin": "^2.1"
    },
    "require-dev": {
        "laravel/pint": "*",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "symplify/monorepo-builder": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "Modules\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "modules/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "ignore-duplicates": true,
            "merge-dev": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "pestphp/pest-plugin": true,
            "wikimedia/composer-merge-plugin": true,
            "composer/installers": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
	"pint": "vendor/bin/pint",
        "monorepo:validate": "php -d error_reporting='E_ALL & ~E_DEPRECATED' vendor/bin/monorepo-builder validate"
    }
}
